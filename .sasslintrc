{
  "options": {
    "merge-default-rules": false,
    "max-warnings": 50,
    "formatter": "stylish"
  },
  "files": {
    "include": "src/**/*.s+(a|c)ss",
    "ignore": [
      "node_modules"
    ]
  },
  "rules": {
    "extends-before-mixins": 2,
    "extends-before-declarations": 2,
    "placeholder-in-extend": 2,
    "mixins-before-declarations": [
      2,
      {
        "exclude": [
          "breakpoint",
          "mq"
        ]
      }
    ],
    "no-warn": 1,
    "no-debug": 1,
    "no-ids": 2,
    "no-important": 2,
    "hex-notation": [
      2,
      {
        "style": "lowercase"
      }
    ],
    "indentation": [
      2,
      {
        "size": 2
      }
    ],
    "property-sort-order": [
      1,
      {
        "order": [
          "display",
          "margin"
        ],
        "ignore-custom-properties": true
      }
    ]
  }
}
